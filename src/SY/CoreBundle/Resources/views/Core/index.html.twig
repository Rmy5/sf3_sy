{% extends 'SYCoreBundle::layout.html.twig' %}

{% block header %}
    <div id="header" class="jumbotron">
        <h1>Ma super plateforme</h1>
        <p>
            Ce projet est propulsé pas Symfony,
            et construit grâce au MOOC OC et Sensiolabs.
        </p>
        <p>
            <a class="btn btn-primary btn-lg" href="https://openclassrooms.com/courses/developpez-votre-site-web-avec-le-framework-symfony2">
                Participer au MOOC »
            </a>
        </p>
    </div>
{% endblock %}

{% block sycore_body %}
    <div class="row">
        <div id="menu" class="col-md-3">

            <h3>Les espaces</h3>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="{{ path('sy_platform_home') }}">Plateforme Annonces</a></li>
                <li><a href="{{ path('sy_core_contact') }}">Contact</a></li>
            </ul>


        </div>
        <div id="content" class="col-md-9">
            {% block body %}

                <p>
                    {% for msg in app.session.flashbag.get('notice') %}
                        <div class="alert alert-info">{{ msg }}</div>
                    {% endfor %}
                </p>



                <h1>Annonces</h1>

                <hr>

                <h4>Dernières annonces</h4>
                {{ render(controller('SYPlatformBundle:Advert:menu', {'limit': 3})) }}

            {% endblock %}
        </div>
    </div>

    <hr>
{% endblock %}